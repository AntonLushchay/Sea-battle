{
	"name": "sea-battle",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"workspaces": [
		"packages/*"
	],
	"scripts": {
		"dev": "run-p dev:client dev:server",
		"build": "npm run build --workspace=@sea-battle/shared && npm run build --workspace=@sea-battle/client && npm run build --workspace=@sea-battle/server",
		"preview": "npm run preview --workspace=@sea-battle/client",
		"dev:client": "npm run dev --workspace=@sea-battle/client",
		"build:client": "npm run build --workspace=@sea-battle/client",
		"preview:client": "npm run preview --workspace=@sea-battle/client",
		"dev:server": "npm run dev --workspace=@sea-battle/server",
		"build:server": "npm run build --workspace=@sea-battle/server",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"stylelint": "stylelint packages/**/*.{css,scss,sass}",
		"stylelint:fix": "stylelint packages/**/*.{css,scss,sass} --fix",
		"lint:all": "npm run lint && npm run stylelint"
	},
	"devDependencies": {
		"@eslint/js": "^9.35.0",
		"@types/node": "^24.3.1",
		"@typescript-eslint/eslint-plugin": "^8.43.0",
		"@typescript-eslint/parser": "^8.43.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-import-resolver-typescript": "^4.4.4",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-promise": "^7.2.1",
		"eslint-plugin-sonarjs": "^3.0.5",
		"eslint-plugin-unused-imports": "^4.2.0",
		"globals": "^16.4.0",
		"jiti": "^2.5.1",
		"npm-run-all": "^4.1.5",
		"prettier": "^3.6.2",
		"typescript": "~5.8.3",
		"typescript-eslint": "^8.43.0"
	}
}
